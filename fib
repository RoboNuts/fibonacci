#Project 2: Fibonacci sequence

def Fib(n):
    if n < 0: #if input is less than 0 it will throw invalid input
        print("Invalid Input. Please try again.")
    
    elif n == 0: #if input is 0 returns 0
        return 0
    
    elif n == 1 or n == 2: #if n is 1 or 2 it will return 1
        return 1
    
    else:
        return Fib(n - 1) + Fib(n - 2) #fib equation
    
fib_num = int(input('Number for Finbonacci: ')) #input for number to pass through fib

print(Fib(fib_num)) #output
